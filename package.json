{
  "scripts": {
    "build:css": "postcss assets/css/main.css -o assets/css/styles.css",
    "watch:css": "postcss assets/css/main.css -o assets/css/styles.css --watch",
    "start": "run-p watch:css jekyll:serve",
    "jekyll:serve": "bundle exec jekyll serve --incremental --livereload"
  },
  "dependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.3.2"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
